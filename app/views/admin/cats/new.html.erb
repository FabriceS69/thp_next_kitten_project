<%= render 'cats/banner' %>

<div class="component-example">
  <div class="row justify-content-center">
    <h2>Add a new cat picture</h2><br>
  </div>

<div class="row justify-content-center">
  <div class="col-md-10 col-lg-6">
    <div class="row mb-4">
    <div class="col">
      <div class="boxed">
        <div class="row align-items-center justify-content-between p-3">
          <p><b>Choose your pic</b></p>
          <div class="col-md-5 text-center text-md-left">
          <%= form_tag url_for(action: 'create'), method: "post", multipart: true do %>
          <%= label_tag 'Image' %> <br>
          <%= file_field_tag :item_picture %>
        </div>
          <div class="col-md-4 text-center text-md-right mt-1 mt-md-0">
        </div>
      </div>
    </div>
   </div>
 </div>
<div class="row">
  <div class="col">
    <h5 class="mb-2 fs-20 font-weight-normal">General Information</h5>
      <div class="form-row">
        <div class="col">
          <div class="form-group">
            <%= label_tag 'Title' %>
            <%= text_field_tag 'title', @cat.title, class: "form-control", placeholder: "" %>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <%= label_tag 'Price' %>
            <%= text_field_tag 'price', @cat.price, class: "form-control", placeholder: "" %>
          </div>
        </div>
      </div>
    </div>    
  </div>
  <div class="row">
    <div class="col">
      <h5 class="mb-2 fs-20 font-weight-normal"></h5>
        <div class="form-row">
          <div class="col">
            <div class="form-group">
              <%= label_tag 'Description' %>
              <%= text_area_tag :description, "", class: 'form-control', placeholder: "" %>
            </div>
          </div>
        </div>
        <div class="row justify-content-center">
          <%= submit_tag "Create",  class: "btn btn-primary px-5" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
            