<!-- cover -->
<%= render 'banner' %>
<!-- / cover -->
<section id="default" class="component">
  <div class="tab-pane show active bg-light" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
    <div class="component-example">
      <% if @cats.present? %>
        <div class="container ">
          <div class="row">
            <% @cats.each do |c| %>
              <div class="col-6 col-lg-4 col-sm-12 ">
                <article class="card card-minimal">
                  <%if c.item_picture.attached?%>
                    <%= link_to (image_tag c.item_picture, alt: 'Cat', style:'width: 100%', class: 'transition'), cat_path(id:c.id)  %>
                  <%else%>
                    <%= image_tag("example.jpg")%>
                  <%end%>
                  
                  <% if user_signed_in? && c.seller.present?%>
                    <br>
                     <p class="has-text-gray fg pt1">Sold by <%= link_to "#{c.user_seller}", profile_path(c.seller.profile) %></p>
                  <% else %>
                  <% end %>

                  <div class="card-body">
                    <h5 class="card-title text-center"><%= link_to c.title, cat_path(id:c.id)%></h5>
                    <p class="card-title text-center">  <%= c.price %>â‚¬ </p>
                  </div>

                  <% if current_user == c.seller_id %>
                  <div class="container">
                    <div class="row">
                      <div class="col-sm">
                        <% link_to 'Edit', edit_cat_path(c.id) %>
                      </div>
                      <div class="col-sm">
                        <% link_to 'Delete', c, method: :delete, data: { confirm: "Are you sure ?" } %>
                      </div>
                    </div>
                  </div>
                   <% end %>

                  <div class="card-footer">
                    <div class="row justify-content-center">
                      <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                          <%= button_to "Buy me!", {action: 'create', controller: 'cart_cats', id: c.id, price: c.price}, {class:"btn btn-outline-primary btn-sm"} %>
                        </li>
                      </ul>
                    </div>
                  </div>
                </article>
              </div>
            <%end%>
          </div>
        </div>
        </div>
      <%end%>
      </div>
</section>

