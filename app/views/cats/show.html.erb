<%= render 'banner' %>
    
<section class="component">
  <div class="tab-content" id="component-1">
    <div class="tab-pane show active" id="component-1-1" role="tabpanel" aria-labelledby="component-1-1">
      <div class="component-example">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <figure class="photo">
                  <% if @cat.item_picture.attached?%> 
                  <%=image_tag @cat.item_picture, alt: @cat.title, class: ""%>
                  <% else %>
                  <%= image_tag("example.jpg", class: "lightbox",)%>
                  <% end %>
                </figure>
              </div>
              <div class="col-md-6">
                <div class="container">
                    <div class="col">
                      <div class="card">
                        <div class="card-body text-center">
                          <h5 class="card-title"><%= @cat.title %></h5>
                          <p class="card-text"><%= @cat.description %></p>
                        </div>
                        <ul class="list-group list-group-flush text-center">
                          <li class="list-group-item">Price : <%= @cat.price %> â‚¬</li>
                        </ul>
                        <div class="card-body text-center">
                          <%= button_to "Buy me!", {action: 'create', controller: 'cart_cats', id: @cat.id, price: @cat.price}, {class:"btn btn-outline-primary btn-sm"} %>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div><br>
    </div> 
  </section>