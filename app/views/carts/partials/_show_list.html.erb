<li class="list-group-item d-flex justify-content-between lh-condensed">
  <div class="flex-shrink-1 w-50">
    <h6 class="font-weight-bold"><%= show_list.include_cat_info.title %></h6>
    <small class="text-muted"><%= show_list.include_cat_info.description %></small>
  </div>
  <span class="flex-shrink-0 w-10"><%= show_list.price %></span>
  <span class="flex-shrink-0 w-10"><%= show_list.quantity %></span>
