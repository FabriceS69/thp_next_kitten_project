<div class="container">
  <section class="hero hero-with-header">
    <div class="pb-5 text-center">
      <h1>Cart id: <%= @cart.id %></h1>
      <p> for user: <%= @cart.user_id %> (current: <%= current_user.id %>)</p>
    </div>
  </section>
  <section>
    <div class="container">
      <!-- TODO: fix spacing -->
      <div class="row">
        <div class="col-md-10">
          <h4>Votre panier</h4>
          <ul class="list-group bg-light">
            <li class="list-group-item d-flex justify-content-between lh-condensed bg-white">
              <h6 class="flex-shrink-1 w-50">Nom</h6>
              <span class="flex-shrink-0 w-10">Prix</span>
              <span class="flex-shrink-0 w-10">Quantit√©</span>
              <span class="flex-shrink-0 w-10">Total</span>
              <span class="flex-shrink-0 w-20"> </span>
            </li>
            <%= render partial: 'cart_cat', collection: @cart.cart_cats %>
            <li class="list-group-item d-flex justify-content-between lh-condensed bg-white">
              <span class="w-50"></span>
              <span class="w-30"></span>
              <span class="align-content-end">
                  <%= form_tag charges_path do %>
                  <article>
                    <% if flash[:error].present? %>
                      <div id="error_explanation">
                        <p><%= flash[:error] %></p>
                      </div>
                    <% end %>
                    <label style="font-size: 12pt; color: black;">
                      <span>Total : <%= @cart.total_cart_price %></span>
                    </label>
                  </article>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= ENV['PUBLISHABLE_KEY'] %>"
                          data-description="Votre commande"
                          data-amount="<%= @cart.total_cart_price %> * 100"
                          data-locale="auto"></script>
                <% end %>
              </span>
              <span class="w-10"><%= link_to "empty cart", cart_path(@cart.id), method: :delete, class: "btn btn-outline-primary btn-sm m-1" %>
              </span>
            </li>
          </ul>
        </div>
        <div class="col-md-2">
          <h4>Some things</h4>
        </div>
      </div>
    </div>
  </section>
  <section>
    What else?
  </section>
</div>