<h1>Cart id: <%= @cart.id %></h1>
<p> for user: <%=@cart.user_id %> (current: <%= current_user.id %>)</p>
<ul>
<% @cart.cart_cats.each do |cart_cat| %>
  <li>
    Cat id: <%= cart_cat.cat_id %>;
    Price: <%= cart_cat.price %>;
    Quantity: <%= cart_cat.quantity %>;
    Id in cart: <%= cart_cat.id %>
    <%= link_to "delete", cart_cat_path(cart_cat.id), method: :delete %>
  </li>
<% end %>
<!-- TODO: add confirmation before delete ? -->
<%= link_to "empty cart", cart_path(@cart.id), method: :delete, class: "btn btn-outline-primary m-1" %>
<%= link_to "checkout", "#", class: "btn btn-outline-primary m-1" %>

</ul>